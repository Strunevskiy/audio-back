<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/track_row"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_height">

    <ImageView
        android:id="@+id/track_image"
        android:layout_height="match_parent"
        android:layout_width="@dimen/player_height" />

    <RelativeLayout
        android:id="@+id/track_meta_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/track_image"
        android:layout_alignParentLeft="@id/track_image"
        android:paddingLeft="25dip"
        android:paddingRight="25dip">


        <RelativeLayout
            android:id="@+id/track_meta_data"
            android:layout_width="236dp"
            android:layout_height="match_parent"
            android:paddingTop="18dip"
            android:paddingBottom="18dip">

            <TextView
                android:id="@+id/track_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/title"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/track_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/track_title"
                android:maxLines="1"
                android:textColor="@color/sub_title"
                android:textSize="18dp" />

        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/sound_cloud_logo"
        android:layout_alignRight="@+id/track_meta_data_container"
        android:layout_alignBottom="@+id/track_meta_data_container"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_sound_cloud" />
</RelativeLayout>
